{
  "name": "@lyvely/common",
  "version": "0.1.0-alpha3",
  "description": "Common base library",
  "author": "Julian Harrer",
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.js",
  "types": "dist/lib/index.d.ts",
  "scripts": {
    "lint": "eslint --fix",
    "format": "prettier src --write",
    "prettier": "prettier src --check",
    "depcheck": "depcheck --quiet",
"ncu": "ncu",
    "test": "jest --passWithNoTests",
    "clear": "rm -rf ./dist && rm -f ./tsconfig.tsbuildinfo",
    "prebuild": "rimraf dist && rimraf tsconfig.build.tsbuildinfo",
    "build": "rimraf ./dist && tsc -p tsconfig.build.json --outDir dist/lib --declarationDir dist/lib --declaration true && tscpaths -p tsconfig.build.json -s ./src -o dist/lib && rollup -c --silent && rm -f tsconfig.tsbuildinfo",
    "watch": "npm-watch",
    "_prepare": "pnpm run build",
    "tsc": "tsc --outDir dist/lib --declarationDir dist/lib --declaration true",
    "deps": "npx depcruise --config .dependency-cruiser.cjs src"
  },
  "files": [
    "dist/**"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/buddh4/lively-common.git"
  },
  "bugs": {
    "url": "https://github.com/buddh4/lively-common/issues"
  },
  "homepage": "https://github.com/buddh4/lively-common#readme",
  "dependencies": {
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "he": "^1.2.0",
    "mitt": "^3.0",
    "lodash": "^4.17",
    "reflect-metadata": "^0.1.12 || ^0.2.0"
  },
  "devDependencies": {
    "@lyvely/devtools": "workspace:*",
    "@types/he": "^1.2.2",
    "npm-watch": "^0.11.0",
    "rimraf": "^5.0",
    "tslib": "^2.6.2",
    "@types/lodash": "^4.17",
    "typescript": "^5.4",
    "tscpaths": "^0.0.9",
    "rollup": "^4.18",
    "@types/node": "^20.12",
    "@rollup/plugin-typescript": "^11.1",
    "@rollup/plugin-commonjs": "^25.0",
    "@rollup/plugin-dynamic-import-vars": "^2.1.2",
    "@rollup/plugin-node-resolve": "^15.0",
    "rollup-plugin-node-externals": "^6.1",
    "eslint": "^8.24",
    "@typescript-eslint/eslint-plugin": "^7.9",
    "@typescript-eslint/parser": "^7.9",
    "eslint-config-prettier": "^8.8",
    "eslint-import-resolver-typescript": "^3.5",
    "eslint-plugin-import": "^2.26",
    "eslint-plugin-prettier": "^5.1",
    "depcheck": "^1.4"
  },
  "jest": {
    "rootDir": "./",
    "setupFiles": [
      "<rootDir>/jest-setup.ts"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "disableSourceMapSupport": true
        }
      ]
    },
    "coverageProvider": "v8",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 20,
        "functions": 30,
        "lines": 50,
        "statements": 50
      }
    },
    "coveragePathIgnorePatterns": [
      "index.ts"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "testEnvironment": "node"
  },
  "watch": {
    "build": {
      "patterns": [
        "src/**"
      ],
      "ignore": "src/**/*.spec.ts",
      "extensions": "ts"
    }
  }
}
