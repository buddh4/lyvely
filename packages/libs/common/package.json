{
  "name": "@lyvely/common",
  "version": "0.1.0-alpha3",
  "description": "Common base library",
  "author": "Julian Harrer",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/lib/index.d.ts",
  "scripts": {
    "test": "jest --passWithNoTests",
    "clear": "rm -rf ./dist && rm -f ./tsconfig.tsbuildinfo",
    "prebuild": "rimraf dist && rimraf tsconfig.build.tsbuildinfo",
    "build": "tsc -p tsconfig.build.json --outDir dist/lib --declarationDir dist/lib --declaration true && tscpaths -p tsconfig.build.json -s ./src -o dist/lib && rollup -c && rm -f tsconfig.tsbuildinfo",
    "watch": "npm-watch",
    "_prepare": "npm run build",
    "tsc": "tsc --outDir dist/lib --declarationDir dist/lib --declaration true",
    "deps": "npx depcruise --config .dependency-cruiser.cjs src"
  },
  "files": [
    "dist/**"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/buddh4/lively-common.git"
  },
  "bugs": {
    "url": "https://github.com/buddh4/lively-common/issues"
  },
  "homepage": "https://github.com/buddh4/lively-common#readme",
  "dependencies": {
    "@buddh4/mapped-types": "^1.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "he": "^1.2.0",
    "mitt": "^3.0.0",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.0",
    "@rollup/plugin-commonjs": "^24.1.0",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@types/he": "^1.2.2",
    "npm-watch": "^0.11.0",
    "mongo-seeding": "^3.7.2",
    "rimraf": "^5.0.0"
  },
  "jest": {
    "rootDir": "./",
    "setupFiles": [
      "<rootDir>/jest-setup.ts"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.ts$": ["ts-jest", { "disableSourceMapSupport": true }]
    },
    "coverageProvider": "v8",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 20,
        "functions": 30,
        "lines": 50,
        "statements": 50
      }
    },
    "coveragePathIgnorePatterns": [
      "index.ts"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "testEnvironment": "node"
  },
  "watch": {
    "build": {
      "patterns": [
        "src/**"
      ],
      "ignore": "src/**/*.spec.ts",
      "extensions": "ts"
    }
  }
}
