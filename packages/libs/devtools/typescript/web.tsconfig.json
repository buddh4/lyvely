{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "outDir": "dist",
    "declaration": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowJs": true,
    "skipLibCheck": true,
    "noImplicitThis": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitOverride": true,
    "sourceMap": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": [
      "vue",
      "@vue/runtime-dom",
      "reflect-metadata",
      "vite-plugin-pwa/client",
      "node"
    ],
    "lib": [
      "esnext",
      "dom",
      "ESNext",
      "WebWorker",
      "DOM",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ]
}
