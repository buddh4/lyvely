{
  "name": "@lyvely/timers",
  "version": "0.1.0-alpha3",
  "description": "Lyvely timers module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "eslint --fix",
    "format": "prettier . --write",
    "prettier": "prettier . --check",
    "build": "rm -rf ./dist/* && tsc -p tsconfig.build.json",
    "prepublish:npm": "pnpm run build",
    "publish:npm": "npm publish --access public",
    "prepublish:next": "pnpm run build",
    "publish:next": "npm publish --access public --tag next",
    "prerelease": "pnpm run build",
    "test": "jest --passWithNoTests"
  },
  "author": "Julian Harrer",
  "license": "AGPL-3.0",
  "dependencies": {
    "@nestjs/mongoose": "^10.0.6",
    "reflect-metadata": "0.1.13",
    "@lyvely/api": "workspace:*",
    "@lyvely/common": "workspace:*",
    "@lyvely/timers-interface": "workspace:*"
  },
  "jest": {
    "rootDir": ".",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.ts"
    ],
    "testRegex": "[^cypress]*\\.spec\\.ts$",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "compilerOptions": {
            "sourceMap": true,
            "inlineSourceMap": true
          }
        }
      ]
    },
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
