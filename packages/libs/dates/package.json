{
  "name": "@lyvely/dates",
  "version": "0.1.0-alpha3",
  "description": "Lyvely calendar core module",
  "type": "commonjs",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/lib/index.d.ts",
  "scripts": {
    "lint": "eslint --fix",
    "format": "prettier src --write",
    "prettier": "prettier src --check",
    "build": "tsc -p tsconfig.build.json --outDir dist/lib --declarationDir dist/lib --declaration true && tscpaths -p tsconfig.build.json -s ./src -o dist/lib && rollup --silent -c && rm -f tsconfig.tsbuildinfo",
    "prepublish:npm": "pnpm run build",
    "publish:npm": "npm publish --access public",
    "prepublish:next": "pnpm run build",
    "publish:next": "npm publish --access public --tag next",
    "prerelease": "pnpm run build",
    "test": "jest --passWithNoTests",
    "clear": "rm -rf ./dist && rm -f ./tsconfig.tsbuildinfo",
    "test:cov": "jest --coverage --no-cache"
  },
  "author": "Julian Harrer",
  "license": "AGPL-3.0",
  "dependencies": {
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dayjs": "^1.11.10"
  },
  "devDependencies": {
    "@lyvely/devtools": "workspace:*",
    "rimraf": "^5.0",
    "typescript": "^5.4",
    "tscpaths": "^0.0.9",
    "rollup": "^4.18",
    "@types/node": "^20.12",
    "@rollup/plugin-typescript": "^11.1",
    "@rollup/plugin-commonjs": "^25.0",
    "@rollup/plugin-dynamic-import-vars": "^2.1.2",
    "@rollup/plugin-node-resolve": "^15.0",
    "rollup-plugin-node-externals": "^6.1",
    "eslint": "^8.24",
    "@typescript-eslint/eslint-plugin": "^7.9",
    "@typescript-eslint/parser": "^7.9",
    "eslint-config-prettier": "^8.8",
    "eslint-import-resolver-typescript": "^3.5",
    "eslint-plugin-import": "^2.26",
    "eslint-plugin-prettier": "^5.1"
  },
  "jest": {
    "rootDir": ".",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.ts"
    ],
    "testRegex": "[^cypress]*\\.spec\\.ts$",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "compilerOptions": {
            "sourceMap": true,
            "inlineSourceMap": true
          }
        }
      ]
    },
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
