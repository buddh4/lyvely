{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "outDir": "dist",
    "declaration": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "noImplicitThis": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "vite": ["node_modules/vite"]
    },
    "types": ["vue", "@vue/runtime-dom", "reflect-metadata", "vite-plugin-pwa/client", "jest"],
    "lib": ["esnext", "dom", "WebWorker", "dom.iterable", "scripthost"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "vite.config.mts",
    "config/lyvely-web.config.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
