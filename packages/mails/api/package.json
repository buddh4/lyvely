{
  "name": "@lyvely/mails",
  "version": "0.1.0-alpha3",
  "description": "Lyvely policy module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "eslint \"lib/**/*.ts\" --fix",
    "format": "prettier \"lib/**/*.ts\" --write",
    "copy-assets": "ncp src/templates dist/templates",
    "build": "rm -rf dist && tsc -p tsconfig.build.json && npm run copy-assets",
    "prepublish:npm": "npm run build",
    "publish:npm": "npm publish --access public",
    "prepublish:next": "npm run build",
    "publish:next": "npm publish --access public --tag next",
    "prerelease": "npm run build",
    "test": "jest --passWithNoTests"
  },
  "author": "Julian Harrer",
  "license": "AGPL-3.0",
  "dependencies": {
    "@nestjs/config": "^2.3.1",
    "@nestjs/common": "^9.4.0",
    "@lyvely/core": "^0.1.0-alpha3",
    "nodemailer": "^6.9.1",
    "pug": "^3.0.2"
  },
  "devDependencies": {
    "@lyvely/testing": "^0.1.0-alpha3",
    "@nestjs/testing": "^9.4.0",
    "@nestjs-modules/mailer": "^1.8.1",
    "reflect-metadata": "0.1.13",
    "ncp": "^2.0.0",
    "ts-jest": "29.1.0",
    "ts-node": "10.9.1",
    "typescript": "^5.2.2",
    "@types/pug": "2.0.6"
  },
  "jest": {
    "rootDir": ".",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.ts"
    ],
    "testRegex": "[^cypress]*\\.spec\\.ts$",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "compilerOptions": {
            "sourceMap": true,
            "inlineSourceMap": true
          }
        }
      ]
    },
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
