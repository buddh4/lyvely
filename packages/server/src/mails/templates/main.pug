html
    head
      include head
    body(class='body' style='padding:0 !important; margin:0 !important; display:block !important; min-width:100% !important; width:100% !important; background:#ffffff; -webkit-text-size-adjust:none;')
      table(width='100%' border='0' cellspacing='0' cellpadding='0' bgcolor='#ffffff')
        tr
          td(align='center' valign='top')
            table(width='100%' border='0' cellspacing='0' cellpadding='0')
              tr
                td(align='center')
                  table.mobile-shell(width='650' border='0' cellspacing='0' cellpadding='0')
                    tr
                      td.td(style='width:650px; min-width:650px; font-size:0pt; line-height:0pt; padding:0; margin:0; font-weight:normal;')
                        // Header
                        table(width='100%' border='0' cellspacing='0' cellpadding='0')
                          tr
                            td.p30-15.tbrr(style='padding: 30px 0px 40px 0px; border-radius:12px 12px 0px 0px;')
                              table(width='100%' border='0' cellspacing='0' cellpadding='0')
                                tr
                                  th.column-top(width='145' style='font-size:0pt; line-height:0pt; padding:0; margin:0; font-weight:normal; vertical-align:top;')
                                    table(width='100%' border='0' cellspacing='0' cellpadding='0')
                                      tr
                                        td.img.m-center(style='font-size:0pt; line-height:0pt; text-align:left;')
                                          img(src=logoImageUrl width='67' height='21' border='0' alt='')
                                  th.column-empty2(width='1' style='font-size:0pt; line-height:0pt; padding:0; margin:0; font-weight:normal; vertical-align:top;')
                                  th.column(style='font-size:0pt; line-height:0pt; padding:0; margin:0; font-weight:normal;')
                                    table(width='100%' border='0' cellspacing='0' cellpadding='0')
                                      tr
                                        td.text-header(style='color:#838586; font-family:Arial, sans-serif; font-size:14px; line-height:18px; text-align:right;')
                        // END Header
                        // Hero
                        table(width='100%' border='0' cellspacing='0' cellpadding='0')
                          tr
                            td.fluid-img(style='font-size:0pt; line-height:0pt; text-align:left;')
                              img(src=headerImageUrl width='650' height='366' border='0' alt='')
                          tr
                            td.p30-15(style='padding: 40px 0px 40px 0px;')
                              table(width='100%' border='0' cellspacing='0' cellpadding='0')
                                tr
                                  td.h3.pb15(style='color:#000000; font-family:Arial, sans-serif; font-size:22px; line-height:32px; text-align:left; padding-bottom:15px;') #{headline}
                                tr
                                  td.text.pb15(style='color:#666666; font-family:Arial, sans-serif; font-size:15px; line-height:28px; text-align:left; padding-bottom:15px;') !{body}
                                tr
                                  td.img(height='1' bgcolor='#e5e5e5' style='font-size:0pt; line-height:0pt; text-align:left;') &nbsp;
                                tr
                                  td.pb40(style='padding-bottom:40px;')
                        // END Hero
                        // Footer
                        table(width='100%' border='0' cellspacing='0' cellpadding='0')
                          tr
                            td.p0-15-30(style='padding-bottom: 40px;')
                              table(width='100%' border='0' cellspacing='0' cellpadding='0')
                                tr
                                  td(align='center' style='padding-bottom: 30px;')
                                    table(border='0' cellspacing='0' cellpadding='0')
                                      tr
                                        td.img(width='55' style='font-size:0pt; line-height:0pt; text-align:left;')
                                          a(href='#' target='_blank')
                                            img(src='images/t11_ico_facebook.jpg' width='15' height='15' border='0' alt='')
                                        td.img(width='55' style='font-size:0pt; line-height:0pt; text-align:left;')
                                          a(href='#' target='_blank')
                                            img(src='images/t11_ico_twitter.jpg' width='15' height='15' border='0' alt='')
                                        td.img(width='55' style='font-size:0pt; line-height:0pt; text-align:left;')
                                          a(href='#' target='_blank')
                                            img(src='images/t11_ico_instagram.jpg' width='15' height='15' border='0' alt='')
                                        td.img(width='15' style='font-size:0pt; line-height:0pt; text-align:left;')
                                          a(href='#' target='_blank')
                                            img(src='images/t11_ico_linkedin.jpg' width='15' height='15' border='0' alt='')
                                      tr
                                        td.text-footer1.pb10(style='color:#777777; font-family:Arial, sans-serif; font-size:14px; line-height:20px; text-align:center; padding-bottom:10px;') #{footerText}
                                      tr
                                        td.text-footer2.pb20(style='color:#777777; font-family:Arial, sans-serif; font-size:12px; line-height:26px; text-align:center; padding-bottom:20px;') #{footerSubText}
                                      tr
                                        td.text-footer2(style='color:#777777; font-family:Arial, sans-serif; font-size:12px; line-height:26px; text-align:center;')
                                          a.link2-u(href='#{unsubscribeUrl}' target='_blank' style='color:#777777; text-decoration:underline;')
                                            span.link2-u(style='color:#777777; text-decoration:underline;') #{unsubscribeLabel}
