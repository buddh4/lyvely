{
  "name": "@lyvely/common",
  "version": "0.0.1",
  "description": "Shared lively library",
  "type": "commonjs",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/lib/index.d.ts",
  "scripts": {
    "test": "jest",
    "prebuild": "rimraf dist && rimraf tsconfig.build.tsbuildinfo",
    "build": "tsc -p tsconfig.build.json --outDir dist/lib --declarationDir dist/lib --declaration true && rollup -c",
    "watch": "npm-watch",
    "_prepare": "npm run build",
    "tsc": "tsc --outDir dist/lib --declarationDir dist/lib --declaration true"
  },
  "files": [
    "dist/**"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/buddh4/lively-common.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/buddh4/lively-common/issues"
  },
  "homepage": "https://github.com/buddh4/lively-common#readme",
  "dependencies": {
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "dayjs": "^1.11.3",
    "mitt": "^3.0.0",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "7.1.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^28.1.2",
    "npm-watch": "^0.11.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.61.1",
    "ts-jest": "^28.0.5",
    "typescript": "^4.5.4"
  },
  "jest": {
    "rootDir": ".",
    "setupFiles": [
      "<rootDir>/jest-setup.ts"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "disableSourceMapSupport": true
      }
    },
    "coverageProvider": "v8",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 20,
        "functions": 30,
        "lines": 50,
        "statements": 50
      }
    },
    "coveragePathIgnorePatterns": [
      "index.ts"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "testEnvironment": "node"
  },
  "watch": {
    "build": {
      "patterns": [
        "src/**"
      ],
      "ignore": "src/**/test",
      "extensions": "ts"
    }
  }
}
