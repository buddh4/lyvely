{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2021",
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "lib": ["ES2022"],
    "sourceMap": false,
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules", "tests", "dist", "**/*spec.ts"]
}
