{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "outDir": "dist",
    "declaration": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "noImplicitThis": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "vite": ["node_modules/vite"],
      "@lyvely/web": ["src"],
      "@lyvely/calendar-plan": ["../../libs/calendar-plan"],
    },
    "types": [
      "vue",
      "@vue/runtime-dom",
      "reflect-metadata",
      "node",
      "jest"
    ],
    "lib": [
      "esnext",
      "dom",
      "ESNext",
      "WebWorker",
      "DOM",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "vite.config.ts",
    "config/lyvely-web.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
