{
  "name": "@lyvely/habits",
  "version": "0.1.0-alpha3",
  "description": "Lyvely policy module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "eslint --fix",
    "format": "prettier . --write",
    "prettier": "prettier . --check",
    "dev": "nest start",
    "dev:debug": "nest start --debug --watch",
    "dev:e2e": "cross-env NODE_ENV=e2e nest start",
    "dev:e2e:debug": "cross-env NODE_ENV=e2e nest start --debug --watch",
    "build": "rm -rf ./dist/* && tsc -p tsconfig.build.json",
    "prepublish:npm": "pnpm run build",
    "publish:npm": "npm publish --access public",
    "prepublish:next": "pnpm run build",
    "publish:next": "npm publish --access public --tag next",
    "prerelease": "pnpm run build",
    "test": "jest --passWithNoTests"
  },
  "author": "Julian Harrer",
  "license": "AGPL-3.0",
  "dependencies": {
    "@nestjs/common": "^10.3.8",
    "@nestjs/mongoose": "^10.0.6",
    "@lyvely/api": "workspace:*",
    "@lyvely/analytics": "workspace:*",
    "@lyvely/common": "workspace:*",
    "@lyvely/calendar-plan": "workspace:*",
    "@lyvely/timers": "workspace:*",
    "@lyvely/time-series": "workspace:*",
    "@lyvely/habits-interface": "workspace:*",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "reflect-metadata": "0.1.13"
  },
  "devDependencies": {
    "@lyvely/devtools": "workspace:*",
    "@lyvely/testing": "workspace:*",
    "@lyvely/dates": "workspace:*"
  },
  "jest": {
    "rootDir": ".",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.ts"
    ],
    "testRegex": "[^cypress]*\\.spec\\.ts$",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "compilerOptions": {
            "sourceMap": true,
            "inlineSourceMap": true
          }
        }
      ]
    },
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
