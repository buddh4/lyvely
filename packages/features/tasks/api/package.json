{
  "name": "@lyvely/tasks",
  "version": "0.1.0-alpha3",
  "description": "Lyvely policy module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "eslint --fix",
    "format": "prettier \"lib/**/*.ts\" --write",
    "dev": "nest start",
    "dev:debug": "nest start --debug --watch",
    "build": "rm -rf ./dist/* && tsc -p tsconfig.build.json",
    "prepublish:npm": "npm run build",
    "publish:npm": "npm publish --access public",
    "prepublish:next": "npm run build",
    "publish:next": "npm publish --access public --tag next",
    "prerelease": "npm run build",
    "test": "jest --passWithNoTests"
  },
  "author": "Julian Harrer",
  "license": "AGPL-3.0",
  "dependencies": {
    "@nestjs/common": "^10.3.8",
    "@nestjs/mongoose": "^10.0.6",
    "@nestjs/event-emitter": "^2.0.0",
    "@lyvely/api": "^0.1.0-alpha3",
    "@lyvely/dates": "^0.1.0-alpha3",
    "@lyvely/timers": "^0.1.0-alpha3",
    "@lyvely/milestones": "^0.1.0-alpha3",
    "@lyvely/tasks-interface": "^0.1.0-alpha3",
    "reflect-metadata": "0.1.13"
  },
  "devDependencies": {
    "@lyvely/testing": "^0.1.0-alpha3"
  },
  "jest": {
    "rootDir": ".",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.ts"
    ],
    "testRegex": "[^cypress]*\\.spec\\.ts$",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "compilerOptions": {
            "sourceMap": true,
            "inlineSourceMap": true
          }
        }
      ]
    },
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
