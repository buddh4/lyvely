{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "ES2021",
        "lib": ["ES2022"],
        "skipLibCheck": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "sourceMap": false
    }
}
