{
  "name": "@lyvely/milestones",
  "version": "0.1.0-alpha3",
  "description": "Lyvely policy module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "nest start",
    "debug": "nest start:debug",
    "dev:debug": "nest start --debug --watch",
    "lint": "eslint --fix",
    "format": "prettier src --write",
    "prettier": "prettier src --check",
    "depcheck": "depcheck --quiet",
    "deps": "pnpm depcruise --include-only \"^src\" --config .dependency-cruiser.js src",
    "ncu": "ncu",
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "prepublish:npm": "pnpm build",
    "publish:npm": "npm publish --access public",
    "prepublish:next": "pnpm build",
    "publish:next": "npm publish --access public --tag next",
    "prerelease": "pnpm build",
    "test": "jest --passWithNoTests"
  },
  "author": "Julian Harrer",
  "license": "AGPL-3.0",
  "dependencies": {
    "@nestjs/common": "^10.3.8",
    "@nestjs/mongoose": "^10.0.6",
    "@nestjs/event-emitter": "^2.0",
    "@lyvely/common": "workspace:*",
    "@lyvely/api": "workspace:*",
    "@lyvely/dates": "workspace:*",
    "@lyvely/calendar-plan": "workspace:*",
    "@lyvely/milestones-interface": "workspace:*",
    "class-validator": "^0.14.0",
    "reflect-metadata": "^0.1.12 || ^0.2.0"
  },
  "devDependencies": {
    "@lyvely/devtools": "workspace:*",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.12",
    "typescript": "^5.4",
    "tslib": "^2.6.2",
    "eslint": "^8.24",
    "@typescript-eslint/eslint-plugin": "^7.9",
    "@typescript-eslint/parser": "^7.9",
    "eslint-config-prettier": "^8.8",
    "eslint-import-resolver-typescript": "^3.5",
    "eslint-plugin-import": "^2.26",
    "eslint-plugin-prettier": "^5.1",
    "depcheck": "^1.4",
    "dependency-cruiser": "^14.1",
    "rimraf": "^5.0"
  },
  "jest": {
    "rootDir": ".",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.ts"
    ],
    "testRegex": "[^cypress]*\\.spec\\.ts$",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "compilerOptions": {
            "sourceMap": true,
            "inlineSourceMap": true
          }
        }
      ]
    },
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
