{
  "name": "lyvely-app",
  "version": "0.0.1",
  "author": "Julian Harrer",
  "private": true,
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "lint": "eslint \"packages/*/src/**/*.ts\" --fix",
    "watch-common": "npm run watch -w @lyvely/common",
    "build-common": "npm run build -w @lyvely/common",
    "build-server": "npm run build -w @lyvely/server",
    "build-web": "npm run build -w @lyvely/web",
    "test-common": "npm run test -w @lyvely/common",
    "test-server": "npm run test -w @lyvely/server",
    "dev-server": "npm run start:dev -w @lyvely/server",
    "dev-web": "npm run dev -w @lyvely/web",
    "debug-server": "npm run start:debug -w @lyvely/server",
    "deps-server": "npm run deps -w @lyvely/server",
    "deps-common": "npm run deps -w @lyvely/common",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@types/node": "^18.7.14",
    "@types/nodemailer": "^6.4.5",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "eslint": "^8.24.0",
    "husky": "^8.0.1",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.9.1"
  },
  "dependencies": {
    "@types/uuid": "^8.3.4",
    "typescript": "^4.8.2",
    "uuid": "^9.0.0"
  }
}
