{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "subject-case": [
      2,
      "always",
      ["sentence-case", "start-case", "pascal-case", "upper-case", "lower-case"]
    ],
    "type-enum": [
      2,
      "always",
      [
        "build",
        "chore",
        "docs",
        "ci",
        "feat",
        "fix",
        "refactor",
        "revert",
        "style",
        "usability",
        "test"
      ]
    ],
    "scope-enum": [
      1,
      "always",
      [
        "accounts",
        "activities",
        "mixed",
        "docs",
        "calendar-plan",
        "core",
        "common",
        "content",
        "habits",
        "web",
        "server",
        "users",
        "profiles",
        "ui",
        "docker",
        "milestones",
        "tags",
        "tasks",
        "i18n",
        "deps",
        "time-series",
        "system-messages",
        "invitations",
        "milestones",
        "activities",
        "stream",
        "journals",
        "legal",
        "user-registrations",
        "release"
      ]
    ]
  }
}
