{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "subject-case": [
      2,
      "always",
      ["sentence-case", "start-case", "pascal-case", "upper-case", "lower-case"]
    ],
    "type-enum": [
      2,
      "always",
      [
        "build",
        "chore",
        "docs",
        "ci",
        "feat",
        "fix",
        "refactor",
        "revert",
        "style",
        "usability",
        "test"
      ]
    ],
    "scope-enum": [
      1,
      "always",
      [
        "mixed",
        "common",
        "content",
        "web",
        "server",
        "user",
        "profiles"
      ]
    ]
  }
}
