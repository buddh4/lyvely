{
  "extends": "nx/presets/npm.json",
  "plugins": ["nx/plugins/package-json"],
  "pluginsConfig": {
    "@nx/js": {
      "analyzeSourceFiles": true
    }
  },
  "deps": {
    "@lyvely/otp-interfaces": [
      {
        "target": "build",
        "projects": ["@lyvely/dates"]
      }
    ]
  },
  "tasksRunnerOptions": {
    "default": {
      "options": {
        "cacheableOperations": ["build", "test"]
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"]
    }
  },
  "affected": {
    "defaultBase": "main"
  }
}
