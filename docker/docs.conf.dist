server {
    listen 80;
    server_name ${DOCS_BASE_URL};
    return 301 https://${DOCS_HOST}$request_uri;
}

server {
        listen 443 ssl;
        server_name ${DOCS_BASE_URL};
        return 301 https://${DOCS_HOST}$request_uri;

        ssl_certificate /etc/nginx/certs/${SSL_CERT_DOCS};
        ssl_certificate_key /etc/nginx/certs/${SSL_CERT_DOCS};
}

server {
    listen 443 ssl;
    server_name ${DOCS_HOST};

    ssl_certificate /etc/nginx/certs/${SSL_CERT_DOCS};
    ssl_certificate_key /etc/nginx/certs/${SSL_CERT_DOCS};

    root /usr/share/nginx/html/docs;

    index index.html;

    location / {
        try_files $uri $uri/ /index.html;
    }

    location /api {
        proxy_pass http://lyvely:${API_PORT}/api;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /api/live {
        proxy_pass http://lyvely:${API_PORT}/api/live;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_http_version 1.1;
        proxy_set_header Connection '';
        proxy_set_header Cache-Control 'no-cache';
        proxy_set_header X-Accel-Buffering no;
        proxy_set_header Content-Type 'text/event-stream';
    }

    location ~ ^/api/live/(.*)/guest$ {
        proxy_pass http://lyvely:${API_PORT}/api/live/$1/guest;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_http_version 1.1;
        proxy_set_header Connection '';
        proxy_set_header Cache-Control 'no-cache';
        proxy_set_header X-Accel-Buffering no;
        proxy_set_header Content-Type 'text/event-stream';
    }
}
